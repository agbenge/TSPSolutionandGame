<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/tsp_ico"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tsp_ico"
        android:supportsRtl="true"
        android:theme="@style/Theme.TSPSolutionAndGame" >
        <activity
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:resizeableActivity="true"
            tools:targetApi="24"
            android:theme="@style/Theme.TSPSolutionAndGame.NoActionBar"
            android:name=".IntroMain"
            android:exported="false" />
        <activity
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:resizeableActivity="true"
            tools:targetApi="24"
            android:name=".IntroGameSlides"
            android:exported="false"
            android:theme="@style/Theme.TSPSolutionAndGame.NoActionBar" />

        <activity
            android:name=".SharedGame"
            android:exported="true"
            android:label="@string/playingSharedGame" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity android:name=".PlotTspActivity" />

        <activity

            android:name=".GameActivity"
            android:theme="@style/Theme.TSPSolutionAndGame.NoActionBar"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:resizeableActivity="true"
            tools:targetApi="24" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:resizeableActivity="true"
            tools:targetApi="24"            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>
</manifest>